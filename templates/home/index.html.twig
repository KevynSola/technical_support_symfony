{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}| Home
{% endblock %}

{% block body %}
	<div class="bloc-ruban">
		<div class="ruban"></div>
	</div>
	<div class="container vh-100">
		<h1 class="text-center p-4">Bienvenue</h1>

		<p class="text-center">Liste de tout les Symfony UX :</p>
		<div class="card">
			<div class="row m-4">
				{% for component in components %}
					<div class="col col-sm-4 col-md-3 my-4">
						<a class="btn btn-lg btn-outline-danger w-100 h-100 d-flex justify-content-center align-items-center" href="/{{component.name|lower}}">{{component.name}}</a>
					</div>
				{% endfor %}
			</div>
		</div>

	</div>
</div>{% endblock %}
