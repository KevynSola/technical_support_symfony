{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}| Home
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center p-4">Bienvenue</h1>

		<div class="list">
			<p class="text-center">Liste de tout les Symfony UX :</p>
			<div class="row">
				{% for component in components %}
					<div class="col col-sm-4 col-md-3 my-4">
						<a class="btn btn-lg btn-outline-danger w-100" href="/{{component.name|lower}}">{{component.name}}</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>


</div>{% endblock %}
