{% extends 'base.html.twig' %}

{% block title %}Autocomplete
{% endblock %}

{% block body %}
	<section>
		<div class="container">
			<h1 class="text-center p-4">Autocomplete</h1>
			<div class="message text-center mb-3">
				<img src="{{asset('/build/images/install.png')}}" alt="image de l'installation">
				<img src="{{asset('/build/images/field_auto.png')}}" alt="Image de commande">
			</div>
			<div class="bloc-link m-4 d-flex justify-content-center align-items-center">
				<a class="btn btn-lg btn-success mx-4 p-3" href="https://symfony.com/bundles/ux-autocomplete/current/index.html" target="_blank">La DOC !</a>
				<a class="btn btn-lg btn-success mx-4 p-3" href="https://tom-select.js.org/" target="_blank">Tom Select</a>
			</div>
			<div class="block-head d-flex justify-content-between align-items-center">
				<h1>CRUD Autocompletion</h1>
				<div class="bloc-retour">
					<a class="btn btn-lg btn-primary" href="{{ path('app_multiple_new') }}">Create new</a>
					<a class="btn btn-lg btn-dark" href="/">Retour à l'accueil</a>
				</div>
			</div>
			<div class="card">
				<table class="table m-4">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nom</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for multiple in multiples %}
							<tr>
								<td>{{ multiple.id }}</td>
								<td>{{ multiple.nom }}</td>
								<td>
									<a class="btn btn-sm btn-outline-success" href="{{ path('app_multiple_show', {'id': multiple.id}) }}">Voir</a>
									<a class="btn btn-sm btn-warning" href="{{ path('app_multiple_edit', {'id': multiple.id}) }}">Éditer</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

		</div>
	</section>
{% endblock %}
